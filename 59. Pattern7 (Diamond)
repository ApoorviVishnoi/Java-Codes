public class Pattern7 {

	public static void main(String[] args) {
		int n=6;
		for(int r=1;r<=n;r++)
		{
			//loop for space before *
			for(int s=n-r;s>=1;s--)
			{
				System.out.print(" ");
			}
			 //loop too display r *
			for(int c=1;c<=r;c++)
			{
				System.out.print("* ");
			}
			System.out.println();
		}
		for(int r=n-1;r>=1;r--)
		{
			//loop for space before *
			for(int s=n-r;s>=1;s--)
			{
				System.out.print(" ");
			}
			 //loop too display r *
			for(int c=1;c<=r;c++)
			{
				System.out.print("* ");
			}
			System.out.println();
		}
	}
}
